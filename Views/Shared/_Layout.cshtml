    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Content/images/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Lato%3Aregular%2C700%2C400%2C700%7CDancing+Script%3Aregular%2C400&amp;display=swap&amp;ver=3.9" type="text/css" media="all" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Vesper+Libre%3A400%2C500%2C700%2C900%2C400i%2C500i%2C700i%2C900i%7CUnlock%3A400%2C400i%7CCarme%3A400%2C400i%7CPiedra%3A400%2C400i%7CParisienne%3A400%2C400i%7CPrata%3A400%2C400i%7CPT+Serif+Caption%3A400%2C400i%7CSen%3A400%2C700%2C800%2C400i%2C700i%2C800i&amp;display=swap&amp;subset=all&amp;ver=3.2.1" type="text/css" media="all" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?display=swap&amp;family=Fira+Sans%3A300%2C400%7CPrata%3A300%2C400" rel="stylesheet" type="text/css" media="all">
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/site.css" rel="stylesheet">
    <link href="~/Content/css/menu.css" rel="stylesheet">
    <link href="~/Content/css/footer.css" rel="stylesheet">
    <link href="~/Content/css/bg.css" rel="stylesheet">
    @RenderSection("css", required: false)
    <link href="~/Content/css/responsive.css" rel="stylesheet">
    <script src="~/Content/js/jquery.min.js"></script>
</head>
<body>
    <!--Menu - Header-->
    <header>
        <div class="container-lg">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="logo">
                        @if (string.IsNullOrEmpty(string.Format("{0}", ViewBag.Logo)))
                        {
                            <img src="~/Content/images/logo.png" class="img-fluid" alt="@ViewBag.Name" />
                        }
                        else
                        {
                            <img src="@(string.Format("{0}", ViewBag.Logo))" class="img-fluid" alt="@ViewBag.Name" />
                        }
                    </div>
                </div>
                <div class="col-lg-9 col-md-9">
                    <div class="menu-mobile-tablet">
                        <div class="menu-bars">
                            <button type="button">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>
                        <div class="logo-brand">
                            <a class="navbar-brand" href="javascript:void(0)">
                                @if (string.IsNullOrEmpty(string.Format("{0}", ViewBag.Logo)))
                                {
                                    <img src="~/Content/images/logo.png" class="img-fluid" alt="@ViewBag.Name" />
                                }
                                else
                                {
                                    <img src="@(string.Format("{0}", ViewBag.Logo))" class="img-fluid" alt="@ViewBag.Name" />
                                }
                            </a>
                        </div>
                    </div>
                    <div class="menu-desktop">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-home" href="/index.html">Home</a>
                            </li>
                            <li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-services" href="/services.html">Services</a>
                            </li>
                            @*<li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-price-list" href="price-list.html">Price List</a>
                            </li>*@
                            @*<li class="list-inline-item">
		                        <a class="list-inline-item-link" id="menu-gallery" href="gallery.html">Gallery</a>
	                        </li>*@
                            @*<li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-artists" href="/artists.html">Artists</a>
                            </li>*@
                            <li class="list-inline-item dropdown">
                                <a class="dropdown-toggle list-inline-item-link" id="menu-studio" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Studio</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/about-us.html">About us</a></li>
                                    <li><a class="dropdown-item" href="/policies.html">Policies</a></li>
                                    <li><a class="dropdown-item" href="/aftercare.html">Aftercare</a></li>
                                    <li><a class="dropdown-item" href="/faqs.html">FAQs</a></li>
                                    <li><a class="dropdown-item" href="/e-gift.html">Gift Card</a></li>
                                </ul>
                            </li>
                            <li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-contact" href="/contact.html">Contact</a>
                            </li>
                            <li class="list-inline-item">
                                <a class="list-inline-item-link" id="menu-booking" href="@(ViewBag.LinkBookingAppointment)" target="_blank">Book Appointment</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="list-menu">
            <ul class="list-unstyled">
                <li>
                    <a href="/index.html">Home</a>
                </li>
                <li>
                    <a href="/services.html">Services</a>
                </li>
                @*<li>
                    <a href="price-list.html">Price List</a>
                </li>*@
                @*<li>
		            <a href="gallery.html">Gallery</a>
	            </li>*@
                @*<li>
                    <a href="/artists.html">Artists</a>
                </li>*@
                <li class="dropdown">
                    <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Studio</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/about-us.html">About us</a></li>
                        <li><a class="dropdown-item" href="/policies.html">Policies</a></li>
                        <li><a class="dropdown-item" href="/aftercare.html">Aftercare</a></li>
                        <li><a class="dropdown-item" href="/faqs.html">FAQs</a></li>
                        <li><a class="dropdown-item" href="/e-gift.html">Gift Card</a></li>
                    </ul>
                </li>
                <li>
                    <a href="/contact.html">Contact</a>
                </li>
                <li>
                    <a href="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? ViewBag.LinkBookingAppointment : ViewBag.HyperLinkTell)" target="_blank" class="call-us">
                        <span>@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "Book Appointment" : "call us")</span>
                    </a>
                </li>
            </ul>
            <button title="Close (Esc)" type="button" class="btn-close">&nbsp;</button>
        </div>
    </header>
    <!--Menu - Header-->
    <!--Main-->
    @RenderBody()
    <!--Main-->
    <!--Footer-->
    <footer>
        <div class="container-xl">
            <div class="row">
                <div class="col-lg-2 d-lg-block d-md-none d-none text-center text-lg-start">
                    <div class="d-flex h-100 align-items-center py-lg-3">
                        @if (string.IsNullOrEmpty(string.Format("{0}", ViewBag.Logo)))
                        {
                            <img src="~/Content/images/logo.png" class="img-fluid" alt="@ViewBag.Name" />
                        }
                        else
                        {
                            <img src="@(string.Format("{0}", ViewBag.Logo))" class="img-fluid" alt="@ViewBag.Name" />
                        }
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 mb-3 pt-4">
                    <p class="legend"><strong>CONTACT US:</strong></p>
                    <p class="text-left"><b>Address:</b> <a href="@ViewBag.LinkGoogleMapAddress" target="_blank">@ViewBag.Address</a></p>
                    <p class="text-left"><b>Tel:</b> <a href="@ViewBag.HyperLinkTell">@ViewBag.TextTell</a></p>
                </div>
                <div class="col-lg-3 col-md-4 mb-3 pt-4">
                    <p class="legend"><strong>BUSINESS HOURS:</strong></p>
                    @Html.Raw(string.Format("{0}", ViewBag.BusinessHours))
                </div>
                <div class="col-lg-2 col-md-3 mb-3 pt-4">
                    <p class="legend"><strong>FOLLOW US:</strong></p>
                    <a href="@ViewBag.GooglePlus" class="social-icon-link" title="Google">
                        <div class="circle">
                            <span class="fa fa-google-plus"></span>
                        </div>
                    </a>
                    <a href="@ViewBag.HyperLinkTell" class="social-icon-link" title="Phone">
                        <div class="circle bg-primary">
                            <span class="fa fa-phone"></span>
                        </div>
                    </a>
                    <a href="@ViewBag.LinkGoogleMapAddress" class="social-icon-link" title="Map">
                        <div class="circle bg-success">
                            <span class="fa fa-map-marker"></span>
                        </div>
                    </a>
                    @{
                        var ListSocials = new List<WebTattoo.Models.SocialModel>();
                        ListSocials.Add((WebTattoo.Models.SocialModel)ViewBag.Telegram);
                        ListSocials.Add((WebTattoo.Models.SocialModel)ViewBag.Facebook);
                        ListSocials.Add((WebTattoo.Models.SocialModel)ViewBag.Instagram);
                        ListSocials.Add((WebTattoo.Models.SocialModel)ViewBag.Twitter);
                        ListSocials.Add((WebTattoo.Models.SocialModel)ViewBag.Youtube);

                        ListSocials = ListSocials.Where(x => !string.IsNullOrEmpty(x.Url)).OrderBy(x => x.Position).ToList();
                        foreach (var social in ListSocials)
                        {
                            <a href="@social.Url" class="social-icon-link" title="@social.Title">
                                <div class="circle" style="background: @social.BackgroundColor">
                                    <span class="@social.ClassIcon"></span>
                                </div>
                            </a>
                        }

                    }
                </div>
            </div>
        </div>
        <div class="text-center">
            <div class="p-3 bg-dark text-light design-by">
                Design by www.nailsystem.com
            </div>
        </div>
    </footer>
    <!--Footer-->
    <div class="@(!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)) ? "tel-withtext" : "tel")">
        <a href="@ViewBag.HyperLinkTell">
            @if (!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)))
            {
                <i class="fa fa-phone-square"></i>
            }
            else
            {
                <i class="fa fa-phone"></i>
            }
        </a>
    </div>
    @if (!string.IsNullOrEmpty(string.Format("{0}", ViewBag.LinkBookingAppointment)))
    {
        <div class="booking">
            <a href="@ViewBag.LinkBookingAppointment">
                <i class="fa fa-calendar"></i>
            </a>
        </div>
    }
    @RenderSection("modal", required: false)
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
